@using GigNovaModels.ViewModels
@using GigNovaModels.Models
@{
    ViewData["Title"] = "MasterBuyerPage";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>GigNova - Buyer Dashboard</title>
    <meta name="description" content="GigNova is a freelance marketplace where buyers and sellers connect to get projects done—design, music, programming, and more." />
    <link href="~/css/masters/masterbuyer_page.css" rel="stylesheet" />
</head>
<body>
    <header class="dashboard-header">
        <div class="dashboard-container">
            <div class="logo-section">
                <a asp-controller="Buyer" asp-action="HomePage" class="logo">GigNova//:</a>
            </div>

            <nav class="nav-buttons">
                <a asp-controller="Guest" asp-action="ViewCatalogPage" class="btn btn-view-catalog">View Catalog</a>
                <a asp-controller="Buyer" asp-action="ViewOrders" class="btn btn-my-orders">View My Orders</a>
                <a asp-controller="Buyer" asp-action="BuyerProfile" class="btn btn-profile">Open Profile</a>
                <a asp-controller="Buyer" asp-action="BecomeASellerPage" class="btn btn-become-seller">Become A Seller</a>
            </nav>
        </div>
    </header>
    @RenderBody();
</body>
