@using GigNovaModels.ViewModels
@using GigNovaModels.Models
@model CatalogViewModel
@{
    ViewData["Title"] = "ViewCatalogPage";
    Layout = "~/Views/Shared/MasterGuestPage.cshtml";
}
<link href="~/css/viewcatalog_page.css" rel="stylesheet" />
<div class="container">
    <!-- Category Filters -->
    <div class="category-filters">
        <h2>Categories</h2>
        <div class="category-buttons">
            <button class="category-btn" data-category="graphics">Graphics & Design</button>
            <button class="category-btn" data-category="writing">Writing & Translation</button>
            <button class="category-btn" data-category="video">Video & Animation</button>
            <button class="category-btn" data-category="music">Music & Audio</button>
            <button class="category-btn" data-category="programming">Programming & Tech</button>
            <button class="category-btn" data-category="business">Business</button>
            <button class="category-btn" data-category="lifestyle">Lifestyle</button>
            <button class="category-btn" data-category="data">Data</button>
            <button class="category-btn" data-category="photography">Photography</button>
            <button class="category-btn" data-category="marketing">Digital Marketing</button>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Sidebar Filters -->
        <aside class="sidebar">
            <div class="filter-section">
                <h3>Budget</h3>
                <div class="budget-inputs">
                    <input type="number" id="minBudget" placeholder="Min $" min="0" step="5">
                    <input type="number" id="maxBudget" placeholder="Max $" min="0" step="5">
                </div>
            </div>

            <div class="filter-section">
                <h3>Delivery Time</h3>
                <select id="deliveryFilter">
                    <option value="">Any Time</option>
                    <option value="24h">Express 24H</option>
                    <option value="3days">Up to 3 days</option>
                    <option value="7days">Up to 7 days</option>
                </select>
            </div>

            <div class="filter-section">
                <h3>Seller Language</h3>
                <select id="languageFilter">
                    <option value="">All Languages</option>
                    <option value="english">English</option>
                    <option value="spanish">Spanish</option>
                    <option value="french">French</option>
                    <option value="german">German</option>
                    <option value="arabic">Arabic</option>
                    <option value="chinese">Chinese</option>
                </select>
            </div>

            <div class="filter-section">
                <h3>Rating</h3>
                <select id="ratingFilter">
                    <option value="">All Ratings</option>
                    <option value="5">5 Stars & Down</option>
                    <option value="4">4 Stars & Down</option>
                    <option value="3">3 Stars & Down</option>
                    <option value="2">2 Stars & Down</option>
                    <option value="1">1 Star & Down</option>
                </select>
            </div>
        </aside>

        <!-- Gigs Section -->
        <div class="gigs-section">
            <div class="gigs-header">
                <h2 id="resultCount">Available Gigs</h2>
            </div>
            @foreach(Gig gig in Model.Gigs )
            {
               <div class="gigs-grid" id="gigsGrid">
                <!-- Gig cards will be generated by JavaScript -->
                @gig.Gig_name
               <img src="Http://localhost:7059/Images/@gig.Gig_photo" />
                    @gig.Gig_description
            </div>
            }
            @if(Model.TotalPages > 1)
            {
                <div class="pagination">
                    <button class="page-btn" id="prevPage" disabled>Previous</button>
                    @for(int i=1; i<=Model.TotalPages;i++)
                    {
                    <button class="page-btn active" data-page="@i">@i</button>
                    }
                    <button class="page-btn" id="nextPage">Next</button>
                </div>
            }
        </div>
    </div>
</div>

