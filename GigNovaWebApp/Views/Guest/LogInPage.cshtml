@using GigNovaModels.ViewModels
@using GigNovaModels.Models
@{
    ViewData["Title"] = "LogInPage";
    Layout = "~/Views/Shared/MasterGuestPage.cshtml";
}
<link href="~/css/guest_pages/login_page.css" rel="stylesheet" />

<div class="login-container">
    <div class="login-card">
        <h1 class="login-title">Welcome Back</h1>
        <p class="login-subtitle">Log in to your GigNova account</p>

        @if (TempData["AuthMessage"] != null)
        {
            <p style="background:#2b3052;color:#ffffff;padding:10px 12px;border-radius:8px;margin-bottom:12px;">@TempData["AuthMessage"]</p>
        }

        @if (ViewBag.ErrorMessage != null)
        {
            <p style="background:#8b1f2f;color:#ffffff;padding:10px 12px;border-radius:8px;margin-bottom:12px;">@ViewBag.ErrorMessage</p>
        }

        <form asp-controller="Guest" asp-action="LogIn" method="post" id="loginForm">
            <div class="form-group">
                <label class="form-label" for="identifier">Username or Email</label>
                <input type="text"
                       id="identifier"
                       name="identifier"
                       class="form-input"
                       placeholder="Enter your username or email"
                       required>
            </div>

            <div class="form-group">
                <label class="form-label" for="password">Password</label>
                <input type="password"
                       id="password"
                       name="password"
                       class="form-input"
                       placeholder="Enter your password"
                       required>
            </div>

            <button type="submit" class="submit-btn">Log In</button>

            <div class="signup-link">
                Don't have an account? <a href="http://localhost:5172/Guest/SignUpPage">Sign Up</a>
            </div>
        </form>
    </div>
</div>
