
@{
    ViewData["Title"] = "BuyerProfile";
    Layout = "~/Views/Shared/MasterBuyerPage.cshtml";
}

<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>GigNova - Buyer Profile</title>
<link href="~/css/buyer_pages/buyerprofile_page.css" rel="stylesheet" />
<div class="profile-container">
    <!-- Profile Header -->
    <div class="profile-header">
        <h1 class="profile-title">Buyer Profile</h1>
        <p class="join-date">Member since January 15, 2025</p>
    </div>

    <!-- Buyer Information Section -->
    <div class="profile-section">
        <h2 class="section-title">Buyer Information</h2>

        <div class="form-group">
            <label class="form-label" for="displayName">Display Name</label>
            <input type="text"
                   id="displayName"
                   name="displayName"
                   class="form-input"
                   value="John Buyer"
                   placeholder="Enter your display name">
        </div>

        <div class="form-group">
            <label class="form-label" for="bio">Bio</label>
            <textarea id="bio"
                      name="bio"
                      class="form-textarea"
                      placeholder="Tell us about yourself..."
                      maxlength="500">Looking for quality services to help grow my business.</textarea>
            <div class="char-count"><span id="charCount">57</span>/500 characters</div>
        </div>

        <button class="edit-button">Save Changes</button>
    </div>

    <!-- Personal Information Section -->
    <div class="profile-section">
        <h2 class="section-title">Personal Information</h2>

        <div class="form-group">
            <label class="form-label" for="username">Username</label>
            <input type="text"
                   id="username"
                   name="username"
                   class="form-input"
                   value="johnbuyer123"
                   disabled>
            <p class="info-text">Username cannot be changed</p>
        </div>

        <div class="form-group">
            <label class="form-label" for="email">Email</label>
            <input type="email"
                   id="email"
                   name="email"
                   class="form-input"
                   value="john.buyer@example.com"
                   disabled>
            <p class="info-text">Email cannot be changed</p>
        </div>

        <div class="form-group">
            <label class="form-label" for="password">Password</label>
            <input type="password"
                   id="password"
                   name="password"
                   class="form-input"
                   value="********"
                   disabled>
            <p class="info-text">Password cannot be changed</p>
        </div>

        <div class="form-group">
            <label class="form-label" for="birthdate">Birthdate</label>
            <input type="date"
                   id="birthdate"
                   name="birthdate"
                   class="form-input"
                   value="1990-05-15"
                   disabled>
            <p class="info-text">Birthdate cannot be changed</p>
        </div>
    </div>
</div>
