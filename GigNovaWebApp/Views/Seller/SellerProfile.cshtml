
@{
    ViewData["Title"] = "SellerProfile";
    Layout = "~/Views/Shared/MasterSellerPage.cshtml";
}
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>GigNova - Seller Profile</title>
<link href="~/css/seller_pages/sellerprofile_page.css" rel="stylesheet" />
<div class="profile-container">
    <!-- Profile Header -->
    <div class="profile-header">
        <h1 class="profile-title">Seller Profile</h1>
        <p class="join-date">Member since January 15, 2025</p>
    </div>

    <!-- Seller Information Section -->
    <div class="profile-section">
        <h2 class="section-title">Seller Information</h2>

        <!-- Avatar Section -->
        <div class="avatar-section">
            <div class="avatar-container">
                <div class="avatar" id="avatarPreview">
                    👤
                </div>
            </div>
            <label for="avatarUpload" class="upload-avatar-btn">
                Upload Profile Picture
            </label>
            <input type="file" id="avatarUpload" class="file-input" accept="image/*">
        </div>

        <div class="form-group">
            <label class="form-label" for="displayName">Display Name</label>
            <input type="text"
                   id="displayName"
                   name="displayName"
                   class="form-input"
                   value="John Seller"
                   placeholder="Enter your display name">
        </div>

        <div class="form-group">
            <label class="form-label" for="bio">Bio</label>
            <textarea id="bio"
                      name="bio"
                      class="form-textarea"
                      placeholder="Tell clients about your skills and experience..."
                      maxlength="500">Professional graphic designer with 5+ years of experience. Specializing in logo design, branding, and digital illustrations.</textarea>
            <div class="char-count"><span id="charCount">132</span>/500 characters</div>
        </div>

        <button class="edit-button">Save Changes</button>
    </div>

    <!-- Personal Information Section -->
    <div class="profile-section">
        <h2 class="section-title">Personal Information</h2>

        <div class="form-group">
            <label class="form-label" for="username">Username</label>
            <input type="text"
                   id="username"
                   name="username"
                   class="form-input"
                   value="johnseller123"
                   disabled>
            <p class="info-text">Username cannot be changed</p>
        </div>

        <div class="form-group">
            <label class="form-label" for="email">Email</label>
            <input type="email"
                   id="email"
                   name="email"
                   class="form-input"
                   value="john.seller@example.com"
                   disabled>
            <p class="info-text">Email cannot be changed</p>
        </div>

        <div class="form-group">
            <label class="form-label" for="password">Password</label>
            <input type="password"
                   id="password"
                   name="password"
                   class="form-input"
                   value="********"
                   disabled>
            <p class="info-text">Password cannot be changed</p>
        </div>

        <div class="form-group">
            <label class="form-label" for="birthdate">Birthdate</label>
            <input type="date"
                   id="birthdate"
                   name="birthdate"
                   class="form-input"
                   value="1990-05-15"
                   disabled>
            <p class="info-text">Birthdate cannot be changed</p>
        </div>
    </div>
</div>


