@using GigNovaModels.ViewModels
@using GigNovaModels.Models
@{
    ViewData["Title"] = "SellerHomePage";
    Layout = "~/Views/Shared/MasterSellerPage.cshtml";
}
<link href="~/css/seller_pages/seller_home_page.css" rel="stylesheet" />

<!-- Hero Section -->
<section class="hero-section">
    <h1 class="hero-title">Welcome Back Seller !</h1>
    <p class="hero-subtitle">Ready to grow your freelance business?<br>Publish your gigs and keep track of incoming orders.</p>

    <!-- Info Cards -->
    <div class="info-cards">
        <div class="info-card">
            <div class="card-icon">🎨</div>
            <h3 class="card-title">Browse Services</h3>
            <p class="card-description">Explore gigs across multiple categories and connect with freelancers who can help with your project.</p>
        </div>

        <div class="info-card">
            <div class="card-icon">💼</div>
            <h3 class="card-title">Manage Orders & Gigs</h3>
            <p class="card-description">Stay in control of your services and sales. Edit your gigs, monitor incoming orders, and manage your workflow effortlessly.</p>
        </div>

        <div class="info-card">
            <div class="card-icon">⚡</div>
            <h3 class="card-title">Simple & Direct</h3>
            <p class="card-description">Easy to use platform designed for straightforward freelance transactions.</p>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section">
    <h2 class="features-title">How It Works</h2>

    <div class="features-grid">
        <div class="feature-item">
            <div class="feature-icon">📋</div>
            <div class="feature-content">
                <h3>Multiple Categories</h3>
                <p>Find or offer services across various fields including design, development, writing, and more.</p>
            </div>
        </div>

        <div class="feature-item">
            <div class="feature-icon">💰</div>
            <div class="feature-content">
                <h3>Set Your Own Prices</h3>
                <p>Freelancers control their rates. Buyers can filter by budget to find what fits their needs.</p>
            </div>
        </div>

        <div class="feature-item">
            <div class="feature-icon">⭐</div>
            <div class="feature-content">
                <h3>Rating System</h3>
                <p>Build your reputation through client reviews and ratings on completed projects.</p>
            </div>
        </div>

        <div class="feature-item">
            <div class="feature-icon">🚀</div>
            <div class="feature-content">
                <h3>Easy to Get Started</h3>
                <p>Create an account, set up your profile, and start offering or purchasing services right away.</p>
            </div>
        </div>
    </div>
</section>

<!-- About Section -->
<section class="about-section">
    <div class="about-content">
        <h2 class="about-title">About GigNova</h2>
        <p class="about-text">GigNova is a freelance marketplace built to connect talented individuals with clients looking for specific services. Whether you're looking to kickstart your freelance career or need to hire someone for a project, our platform provides the tools to make it happen.</p>
        <p class="about-text">To become a seller on Gignova, users must first create an account and register as a buyer. Once registered, they can apply through a separate seller registration process designed specifically for users who wish to offer their services on the platform. Please note that all users must be 18 years of age or older to join.</p>
        <p class="about-text">Order cancellations are only permitted within the first 72 hours after an order has been placed.</p>
        <p class="about-text">Join our growing community of freelancers and clients today.</p>
    </div>
</section>
